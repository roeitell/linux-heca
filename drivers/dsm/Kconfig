config DSM
	tristate "DSM"
	depends on DSM_CORE && RDS && INFINIBAND && INFINIBAND_ADDR_TRANS && INET
	default m
	help
	  Enable DSM - running single VM over several linux hosts with qemu/kvm.

	  
config DSM_CORE
	bool "DSM_CORE"
	depends on MMU_NOTIFIER && MMU
	default y
	help
		DSM_CORE provides an interface to necessary kernel memory operations required from the operation of DSM.	
		
		
config DSM_DEBUG
	bool "DSM_DEBUG"
	depends on DSM_CORE
	default n
	help
		DSM_DEBUG provides debug functionality for DSM 
		
config DSM_VERBOSE_PRINTK
	bool "DSM_VERBOSE_PRINTK"
	depends on DSM_CORE
	default n
	help
		DSM_VERBOSE_PRINTK provide verbose functionality 	
